extends layouts/main

block content 
    .form-container
        form(action=routes.changePassword,method="post")
            input(type="password",name="password-current",placeholder="Current Password")
            input(type="password",name="password-new",placeholder="New Password")
            input(type="password",name="password-verify-new",placeholder="Verify New Password")
            input(type="submit",value="Change Password")